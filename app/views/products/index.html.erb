<h3 class="page-name">Активные продукты</h3>
<%= render 'search' %>
<%= link_to 'Удаленные продукты', inproducts_path, class: :btn %>
<%= link_to 'Новый продукт', new_product_path, class: :btn %>
<% if @products && @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li class="collection-item list-3">
        <%= link_to product.code, product_path(product) %>
        <%= content_tag :span, "(#{product.name})" %>
        <%= content_tag :span, "< #{product.description} >" %>
      </li>
    <% end %>
  </ul>
<% end %>
