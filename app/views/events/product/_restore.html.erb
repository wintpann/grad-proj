<ul class="event_info">
  <li><%= content_tag :span, 'Product restored'%></li>
  <li><%= link_to event.product_snap.now.name, product_path(event.product_snap.product_id), class: :mark %></li>
  <li><%= content_tag :span, to_local_time(event.created_at)%></li>
  <li><%= link_to event.editor.identifier, user_path(event.editor.id), class: :mark %></li>
  <li><%= content_tag :button, 'Snap'%></li>
</ul>
<div class="event_details">
  <%= render 'snap/product', snap: event.product_snap %>
</div>
