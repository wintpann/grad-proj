<article>
  <div class="event_info">
    <%= content_tag :span, 'Product updated'%>
    <%= link_to event.snap_from.now.name, product_path(event.snap_from.product_id) %>
    <%= content_tag :span, to_local_time(event.created_at)%>
    <%= link_to event.editor.identifier, user_path(event.editor.id) %>
    <%= content_tag :button, 'Snaps'%>
  </div>
  <div class="event_details">
    <%= render 'snap/product', snap: event.snap_from %>
    <%= render 'snap/product', snap: event.snap_to %>
  </div>
</article>
