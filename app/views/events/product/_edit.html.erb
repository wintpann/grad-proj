<ul class="event_info">
  <li><%= content_tag :span, 'Product updated'%></li>
  <li><%= link_to event.snap_from.now.name, product_path(event.snap_from.product_id), class: :mark %></li>
  <li><%= content_tag :span, to_local_time(event.created_at)%></li>
  <li><%= link_to event.editor.identifier, user_path(event.editor.id), class: :mark %></li>
  <li><%= content_tag :button, 'Snaps'%></li>
</ul>
<div class="event_details">
  <div class="half"><%= render 'snap/product', snap: event.snap_from %></div>
  <div class="half"><%= render 'snap/product', snap: event.snap_to %></div>
</div>
