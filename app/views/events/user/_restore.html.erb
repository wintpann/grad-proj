<article>
  <div class="event_info">
    <%= content_tag :span, 'User restored'%>
    <%= link_to event.user_snap.now.identifier, user_path(event.user_snap.user_id) %>
    <%= content_tag :span, to_local_time(event.created_at)%>
    <%= link_to event.editor.identifier, user_path(event.editor.id) %>
    <%= content_tag :button, 'Snap'%>
  </div>
  <div class="event_details">
    <%= render 'snap/user', snap: event.user_snap %>
  </div>
</article>
