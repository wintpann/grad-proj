<ul class="event_info">
  <li><%= content_tag :span, 'Пользователь удален'%></li>
  <li><%= link_to event.user_snap.now.identifier, user_path(event.user_snap.user_id), class: :mark %></li>
  <li><%= content_tag :span, to_local_time(event.created_at)%></li>
  <li><%= link_to event.editor.identifier, user_path(event.editor.id), class: :mark %></li>
  <li><button onclick="details('details_<%=event.user_change_event.head_event.id%>')">Подробно</button></li>
</ul>
<div class="event_details hidden" id="details_<%=event.user_change_event.head_event.id%>">
  <%= render 'snap/user', snap: event.user_snap %>
</div>
