<ul class="event_info">
  <li><%= content_tag :span, 'Realization'%></li>
  <li><%= content_tag :span, event.sum %></li>
  <li><%= content_tag :span, to_local_time(event.created_at)%></li>
  <li><%= link_to event.editor.identifier, user_path(event.editor.id) %></li>
  <li><%= content_tag :button, 'Details'%></li>
</ul>
<div class="event_details">
  <table>
    <thead>
      <tr>
        <th>Product now</th>
        <th>Product code</th>
        <th>Price in</th>
        <th>Amount</th>
        <th>Sum</th>
      </tr>
    </thead>
    <% event.realization_events.each do |e| %>
      <tr>
        <td><%= link_to e.product.code, product_path(e.product.id), class: :mark %></td>
        <td><%= e.product_snap.code %></td>
        <td><%= e.product_snap.price_out %></td>
        <td><%= e.amount %></td>
        <td><%= e.sum %></td>
      </tr>
    <% end %>
  </table>
</div>
