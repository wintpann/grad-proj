<ul class="event_info">
  <li><%= content_tag :span, 'Refund'%></li>
  <li><%= content_tag :span, event.sum %></li>
  <li><%= content_tag :span, to_local_time(event.created_at)%></li>
  <li><%= link_to event.editor.identifier, user_path(event.editor.id), class: :mark %></li>
  <li><button onclick="details('details_<%=event.head_event.id%>')">Details</button></li>
</ul>
<div class="event_details hidden" id="details_<%=event.head_event.id%>">
  <table>
    <thead>
      <tr>
        <th>Product now</th>
        <th>Product code</th>
        <th>Price in</th>
        <th>Amount</th>
        <th>Sum</th>
      </tr>
    </thead>
    <% event.refund_events.each do |e| %>
      <tr>
        <td><%= link_to e.product.code, product_path(e.product.id), class: :mark %></td>
        <td><%= e.product_snap.code %></td>
        <td><%= e.product_snap.price_in %></td>
        <td><%= e.amount %></td>
        <td><%= e.sum %></td>
      </tr>
    <% end %>
  </table>
</div>
