<ul class="event_info">
  <li><%= content_tag :span, 'Поставщик обновлен'%></li>
  <li><%= link_to event.snap_from.now.name, supplier_path(event.snap_from.supplier_id), class: :mark %></li>
  <li><%= content_tag :span, to_local_time(event.created_at)%></li>
  <li><%= link_to event.editor.identifier, user_path(event.editor.id), class: :mark %></li>
  <li><button onclick="details('details_<%=event.supplier_change_event.head_event.id%>')">Подробно</button></li>
</ul>
<div class="event_details hidden" id="details_<%=event.supplier_change_event.head_event.id%>">
  <div class="half"><%= render 'snap/supplier', snap: event.snap_from %></div>
  <div class="half"><%= render 'snap/supplier', snap: event.snap_to %></div>
</div>
